<!doctype html>
<html class="no-js">

<%= grunt.file.read('frontend/header.ejs') %>

<body ng-app="StoryQuestEditorApp" ng-controller="lostpasswordController" ng-cloak class="skin-blue bg-login">

    <%= grunt.file.read('frontend/modals.html') %>

    <div id="login-box" class="form-box login-box">
        <img class="login-header-image" src="/images/havenlogo.png">
        <div class="header bg-aqua">Reset Password</div>
        <form>
            <input type="hidden" name="homeUrl" value="undefined">
            <div class="body bg-light-blue">
                <div class="form-group"><input type="text" placeholder="Your E-Mail address" class="form-control" ng-model="username"></div>
                <div class="form-group"><input ng-class="{'ng-invalid': (password!=password2)}" type="password" ng-model="password" placeholder="New Password" class="form-control"></div>
                <div class="form-group"><input ng-class="{'ng-invalid': (password!=password2)}" type="password" ng-model="password2" placeholder="Retype password" class="form-control"></div>
            </div>
            <div class="footer">
                <button type="button" class="btn bg-aqua btn-block" ng-disabled="!username || !password || !password2 || !(password==password2)"  ng-click="lostPassword()">Reset Password</button>
                <a href="register.html" class="text-center">Register a new membership</a><br>
                <a href="login.html" class="text-center">I already have a membership</a>
            </div>
        </form>
    </div>

<%= grunt.file.read('frontend/footer.ejs') %>

</body>
</html>
