<!doctype html>
<html class="no-js">

<%= grunt.file.read('editor/frontend/header.ejs') %>

<body ng-app="StoryQuestEditorApp" ng-controller="registerController" ng-cloak class="skin-blue bg-login">

<%= grunt.file.read('editor/frontend/modals.html') %>

<div id="login-box" class="form-box login-box">
    <img class="login-header-image" src="/images/havenlogo.png">
    <div class="header bg-aqua">Register New Membership</div>
    <form name="registerForm">
        <div class="body bg-light-blue">
            <div class="form-group"><input type="text" ng-model="name" placeholder="Full name" class="form-control"></div>
            <div class="form-group"><input type="text" ng-model="username" ng-pattern="EMAIL_PATTERN" placeholder="E-Mail address" class="form-control"></div>
            <div class="form-group"><input ng-class="{'ng-invalid': (password!=password2)}" type="password" ng-model="password" placeholder="Password" class="form-control"></div>
            <div class="form-group"><input ng-class="{'ng-invalid': (password!=password2)}" type="password" ng-model="password2" placeholder="Retype password" class="form-control"></div>
            <div class="form-group"><input type="text" ng-model="invitekey" placeholder="Invite Key" class="form-control"></div>
            <div class="checkbox">
                <label>
                    <input type="checkbox" ng-model="terms">
                        <span>&nbsp;I acknowledge the</span>
                        <a href="legal.html" style="color:lightgrey">&nbsp;terms and legal info.</a>
                </label>
            </div>
        </div>
        <div class="footer">
            <button type="button" ng-click="register()" ng-disabled="!terms || !name || !username || !password || !password2 || !invitekey || !(password==password2)" class="btn bg-aqua btn-block">Sign me up</button>
            <a href="login.html" class="text-center">I already have a membership</a>
        </div>
    </form>
</div>

<%= grunt.file.read('editor/frontend/footer.ejs') %>

</body>
</html>